<% include header %>

<div class="well">
    <h2 class="text-primary text-center">
        <% if(locals.title) { %>
            <%= title %>
        <% } else { %>
            <%= fullname %>
        <% } %>
    </h2>
</div>
<% if(locals.fullname && locals.phone && locals.email && locals.about) { %>
<div class="well">
    <ul class="list-group">
        <li class="list-group-item"><%= fullname %></li>
        <li class="list-group-item"><%= phone %></li>
        <li class="list-group-item"><%= email %></li>
        <li class="list-group-item"><%= about %></li>
    </ul>
</div>
<% } %>

<form class="form-group" action="/profile" method="POST" enctype="multipart/form-data">
    <div class="inline-form">
        <label for="" class="label-control">Your name</label>
        <input type="text" class="form-control" name="fullname">
    </div>

    <div class="inline-form">
        <label for="" class="label-control">Your Email</label>
        <input type="text" class="form-control" name="email">
    </div>

    <div class="inline-form">
        <label for="" class="label-control">Your phone</label>
        <input type="text" class="form-control" name="phone">
    </div>

    <div class="inline-form">
        <label for="" class="label-control">About you</label>
        <textarea class="form-control" name="about" id="about" rows="5"></textarea>
    </div>

    <div class="form-group">
        <label class="label-control">Upload File</label>
        <input class="form-control" type="file" name="file">
    </div>
    
    <div class="form-group">
        <input type="submit" name="submit" class="btn btn-primary pull-right">
    </div>


</form>

<% include footer %>